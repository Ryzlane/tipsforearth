<div class="blog-comment {{ comment.comment_type }}" id="blog-comment-{{ comment.ID }}">
	<div class="comment-infos">
		<img class="comment-separator" src='{{ site.theme.link }}/assets/images/separator.svg' />
		<h5 class="comment-author">{{ comment.author.name }}</h5>
		<div class="comment-date">{{ comment.date }}</div>
		<div class="comment-content">{{ comment.comment_content|wpautop }}</div>
	</div>

	<section class="comment-box">
		<!-- child comments -->
		{% if post.comments %}
			<div class="comments">
				{% for cmt in comment.children %}
					{% include "comment.twig" with { comment: cmt } %}
				{% endfor %}
			</div>
		{% endif %}

		<!-- comment form -->
		{# {% include "comment-form.twig" %} #}
	</section>
</div> 