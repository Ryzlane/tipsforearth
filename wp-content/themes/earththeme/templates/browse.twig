{% extends 'base.twig' %}

{% block content %}
	<section class='terms-cards'>
		<h1 class='standard-h1 term-h1'>Les différentes catégories :</h1>
		<div class='tab-terms-cards'>
			{% for el in taxonomies %}
					
				<div class='term-card'>
						
					<img src='{{ el.image.url}}' class='term-img' />
							
						<h3 class='standard-h3 term-h3' > {{ el.title }} </h3>
						
						<div class="term-block-p">	

							<p class="term-preview"> {{ el.description }} </p>
								
						</div>
						

						<div class="standard-button_position">	

							<a href="#" class='standard-button'>Voir plus</a>
								
						</div>
				</div>
					
			{% endfor %}
		</div>
	</section>
{% endblock %}
