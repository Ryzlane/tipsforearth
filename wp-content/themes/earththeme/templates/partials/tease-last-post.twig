{% extends 'partials/tease.twig' %}

{% block content %}
	<div class='tease-last-post'>
		<a href="{{post.link}}">
			<div class='tease-last-post__img'>
				{% if post.thumbnail.src %}
					<img src='{{post.thumbnail.src}}' />
				{% else %}
						<img src='{{ site.theme.link }}/assets/images/post-placeholder.png' alt='no image for this post'>
				{% endif %}
			</div>
		</a>
		<div class='tease-last-post__text-content'>
			<h3 class='tease-last-post__title standard-h3'><a href='{{post.link}}'>{{post.title}}</a></h3>
			<p class='tease-last-post__infos standard-p-secondary'>{{ post.date('d/m/Y') }} | {{ post.comment_count }} commentaire(s)</p>
		</div>
	</div>
{% endblock %}