<div class="comment-form">
    <h3 class='standard-h3'>Poster un commentaire</h3>
    <form class="comment-form-labels" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <label>Email<br>
                <input required name="email" type="email" id="email">
            </label>
            <label>Name<br>
                <input required name="author" type="text">
            </label>
            <label>Website<br>
                <input name="url" type="url">
            </label>
        {% endif %}
        <div class="comment-field">
            <label>
                <textarea placeholder="Laisser un commentaire..." name="comment" cols="60" rows="3" style="resize: none;"></textarea>
            </label>
        </div>
        <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
        <input name="comment_parent"  value="{{ comment.ID|default('0') }}" type="hidden">
        <button type="submit" name="Submit" class="comment-btn">Envoyer</button>
        <button type="reset" class="comment-btn">Effacer</button>
        <p style="margin-top:10px; font-size: 14px">Votre commentaire sera modéré par le site si besoin.</p>
    </form>
</div>
